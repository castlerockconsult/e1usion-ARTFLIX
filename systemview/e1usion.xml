<theme>
	<formatVersion>4</formatVersion>

	<view name="system">
		<image name="art" extra="true">
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
		</image>

		<image name="logo">
			<path>./../assets/logos/$system.png</path>
		</image>

		<image name="background" extra="true">
        	<origin>0 0</origin>
        	<pos>0 0</pos>
        	<size>1 1</size>
        	<path>./../assets/overlay1222.png</path>
        	<zIndex>41</zIndex>
    	</image>

		<video name="md_video" extra="true" ifSubset="randomvid:yes">
			<path>{random}</path>
			<pos>0.025 0.62</pos>
			<maxSize>0.30 0.30</maxSize>
			<origin>0 0</origin>
			<delay>0.2</delay>
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<zIndex>50</zIndex>
        </video>

		<text name="info2" extra="true">
			<fontPath>./../_inc/fonts/Circular Std Black.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>left</alignment>
 			<fontSize>0.09</fontSize>
			<lineSpacing>1</lineSpacing>
			<size>0.36 0.35</size>
			<pos>0.02 0.10</pos>
			<glowColor>00000006</glowColor>
			<glowOffset>2</glowOffset>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
    	</text>

		<text name="info1" extra="true">
			<fontPath>./../_inc/fonts/Circular Std Book.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>left</alignment>
			<fontSize>0.020</fontSize>
			<lineSpacing>1</lineSpacing>
			<size>0.32 0</size>
			<pos>0.025 0.4</pos>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
    	</text>

		<text name="info3" extra="true">
			<fontPath>./../_inc/fonts/Circular Std Black.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>left</alignment>
			<fontSize>0.023</fontSize>
			<lineSpacing>1</lineSpacing>
			<size>0.35 0</size>
			<pos>0.029 0.378</pos>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
    	</text>

		<text name="info4" extra="true">
			<fontPath>./../_inc/fonts/Circular Std Book.ttf</fontPath>
			<color>a8a8a8</color>
			<alignment>left</alignment>
			<fontSize>0.023</fontSize>
			<lineSpacing>1</lineSpacing>
			<size>0.35 0</size>
			<pos>0.078 0.378</pos>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
    	</text>

		<carousel name="systemcarousel">
			<type>vertical</type>
			<pos>0 0</pos>
			<size>1 1</size>
			<origin>0 0</origin>
			<color>00000000</color>
			<logoScale>1.3</logoScale>
			<logoSize>0.2 0.2</logoSize>
			<logoAlignment>right</logoAlignment>
			<maxLogoCount>5</maxLogoCount>
			<defaultTransition>instant</defaultTransition>
			<zIndex>50</zIndex>
		</carousel>

		<text name="systemInfo">
			<pos>-0.308 0.516</pos>
        	<alignment>center</alignment>
        	<fontPath>./../_inc/fonts/Circular Std Black.ttf</fontPath>
	    	<fontSize>0.0142</fontSize>
	    	<color>FFFFFF</color>
	    </text>

    	<helpsystem name="help">
        	<fontPath>./../_inc/fonts/OpenSans-Semibold.ttf</fontPath>
        	<fontSize>0.017</fontSize>
        	<pos>0.02 0.955</pos>
        	<textColor>FFFFFF</textColor>
    	</helpsystem>

		<text name="systemInfoEx"  ifSubset="toptext:yes">
			<text>{binding:favorites} ${GamesFavs}  |  {binding:gamesPlayed} ${NumberPlayed}</text>
			<storyboard repeat="2">
			<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
			<animation property="opacity" from="1" to="0" begin="2500" duration="350" mode="easeOut"  />
			<animation property="opacity" from="0" to="1" begin="7100" duration="350" mode="easeOut"/>
			<animation property="opacity" from="1" to="0" begin="10000" duration="350" mode="easeOut"  />
			<animation property="opacity" from="0" to="1" begin="14100" duration="350" mode="easeOut"/>
			</storyboard>             
		</text>	

		<text name="systemInfoEx2"  ifSubset="toptext:yes">
			<text>${theme.mostplayed} {binding:mostPlayed} </text>
			<storyboard repeat="2">
			<animation property="opacity" from="0" to="0" duration="1" mode="linear"/>
			<animation property="opacity" from="0" to="1" begin="2600" duration="350" mode="easeOut"/>
			<animation property="opacity" from="1" to="0" begin="7000" duration="350" mode="easeOut"  />
			<animation property="opacity" from="0" to="1" begin="10100" duration="350" mode="easeOut"/>
			<animation property="opacity" from="1" to="0" begin="14000" duration="350" mode="easeOut"  />
			</storyboard>             
		</text>
		
		<text name="systemInfoEx, systemInfoEx2" extra="true">
			<fontPath>./../_inc/fonts/Circular Std Book.ttf</fontPath>
			<color>9b9b9b</color>
			<alignment>left</alignment>
			<fontSize>0.0147</fontSize>
			<lineSpacing>1</lineSpacing>
			<size>0.35 0</size>
			<pos>0.104 0.076</pos>
			<glowColor>00000016</glowColor>
			<glowSize>0.6</glowSize>
			<zIndex>42</zIndex>
    	</text>

		<text name="playbutton" extra="true">
			<text>PLAY NOW</text>
		</text>

		<text name="playbutton" extra="true" lang="EN">
			<text>PLAY NOW</text>
		</text>

		<text name="playbutton" extra="true">
			<fontPath>./../_inc/fonts/Circular Std Black.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>center</alignment>
		     <fontSize>0.0142</fontSize>
			<size>0.35 0</size>
			<pos>-0.108 0.5315</pos>
			<glowColor>00000016</glowColor>
			<glowSize>0.8</glowSize>
			<zIndex>42</zIndex>
		</text>
	</view>

	<view name="screen">
    	<controllerActivity name="controllerActivity">
        	<pos>0.03 0.025</pos>
         	<size>0.085 0.025</size>
         	<!--<horizontalAlignment>right</horizontalAlignment>-->
         	<itemSpacing>0.003</itemSpacing>
         	<imagePath>./../_inc/gamepad.svg</imagePath>
			<gunPath>./../_inc/icons/gun.svg</gunPath>		 
        	<color>FFFFFF80</color>
        	<activityColor>A0A0FFC0</activityColor>
        	<hotkeyColor>FFA0A0C0</hotkeyColor>
      	</controllerActivity>
	</view>
</theme>